<Window x:Class="Mygod.Edge.Tool.ModelWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:m="http://schemas.mygodstudio.tk/wpf"
        Width="640" Height="480" Icon="{x:Static m:CurrentApp.MainIcon}" Title="模型查看器" Closed="ModelWindowClosed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Name="Grid" x:FieldModifier="private" Background="Black" MouseWheel="Zoom"
              MouseDown="StartDragging" MouseMove="Dragging" MouseUp="StopDragging">
            <Viewport3D ClipToBounds="True" IsHitTestVisible="False">
                <Viewport3D.Camera>
                    <PerspectiveCamera x:Name="Camera" x:FieldModifier="private" LookDirection="-1,-1,-1" Position="100,100,100" />
                </Viewport3D.Camera>
                <ModelVisual3D x:Name="Model">
                    <ModelVisual3D.Content>
                        <Model3DGroup>
                            <AmbientLight Color="Gray" />
                            <DirectionalLight Color="White" Direction="-1,-2,1" />
                        </Model3DGroup>
                    </ModelVisual3D.Content>
                </ModelVisual3D>
            </Viewport3D>
        </Grid>
        <TextBlock Grid.Row="1" Text="提示：左键左右前后拖动，右键上下拖动，滚轮缩放。" Margin="5" />
    </Grid>
</Window>
